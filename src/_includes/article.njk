---
layout: 'base.njk'
---

<article class="main-article">
    <div class="container mt-5 mb-5">

        <div class="row">

            <div class="col-12 col-md-7 col-lg-8">


                <article class="snippet d-flex">
                    <p class=" me-2 ps-1 pe-1">{{ tags }}</p>
                    <p class="snippet-meta">by<span class="author">{{post.data.author}}</span> on <span>{{ post.date | postDate }}</span></p>
                </article>
                <h3 class="article-title mt-2 mb-5">{{ title }}</h3>
                
                {% include 'share-button.njk' %}


                <figure class="mb-5">
                    <img src="{{ image }}" alt="{{post.data.imageAlt}}">
                    <figcaption>
                        {{imageAlt}}
                        <!-- A group of business men/Image source: Freepik -->
                    </figcaption>
                </figure>
            </div>

            <div class="col-12 col-md-5 col-lg-4 mt-lg-5">
                {% include 'community1.njk' %}
            </div>
        </div>

        <div class="d-flex flex-column flex-lg-row">
            <div class="col-12 col-md-6 col-lg-8 text-start mb-5 pe-lg-5 mt-2">


                {{ content | safe}}

                
                    </div>

                {% include 'advert.njk' %}

            </div>
        </div>
    </div>
</article>