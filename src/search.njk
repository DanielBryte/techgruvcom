<script>
  //get input
let input = document.getElementById("search-posts");
//get list of value
let posts = document.querySelectorAll(".article-snippet");

//function search on the list.
function search (){
  for(let i = 0; i < posts.length; i += 1){
   //check if the element contains the value of the input
   if(posts[i].innerText.toLowerCase().includes(input.value.toLowerCase())){
    posts[i].style.display = "block";
   }else{
    posts[i].style.display = "none";
   }
  }
}

//to the change run search.
input.addEventListener('input', search);
</script>

  


